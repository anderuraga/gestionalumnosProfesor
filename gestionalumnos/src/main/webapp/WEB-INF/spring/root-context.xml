<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	<bean name="mysqlDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver"></property>
		<property name="url" value="jdbc:mysql://localhost:3306/gestioncursos"></property>
		<property name="username" value="josu"></property>
		<property name="password" value="josu"></property>
	
	</bean>
	<bean id="alumnoDAOImp" class="com.ipartek.formacion.dao.AlumnoDAOImp">
		<property name="dataSource" ref="mysqlDataSource"></property>
	</bean>	

	<bean id="alumnoServiceImp" class="com.ipartek.formacion.service.AlumnoServiceImp">
		<property name="alumDAO" ref="alumnoDAOImp"></property>
	</bean>
	<bean id="cursoDAOImp" class="com.ipartek.formacion.dao.CursoDAOImp">
		<property name="dataSource" ref="mysqlDataSource"></property>
	</bean>	

	<bean id="cursoServiceImp" class="com.ipartek.formacion.service.CursoServiceImp">
		<property name="curDAO" ref="cursoDAOImp"></property>
	</bean>
	<bean id="moduloDAOImp" class="com.ipartek.formacion.dao.ModuloDAOImp">
		<property name="dataSource" ref="mysqlDataSource"></property>
	</bean>	

	<bean id="moduloServiceImp" class="com.ipartek.formacion.service.ModuloServiceImp">
		<property name="modDAO" ref="moduloDAOImp"></property>
	</bean>
</beans>
